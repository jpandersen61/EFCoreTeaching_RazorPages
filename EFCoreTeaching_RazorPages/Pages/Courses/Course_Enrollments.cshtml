@page
@model EFCoreTeaching_RazorPages.Pages.Courses.Course_EnrollmentsModel
@{
    ViewData["Title"] = "Course Enrollments";
}


    <h3 style ="color:red">  Course Enrollments</h3>
        <div>
            <dl class="row">
                <dt class="col-sm-2">   @Html.DisplayNameFor(model => model.Course.CourseId)   </dt>
                <dd class="col-sm-10">  @Html.DisplayFor(model => model.Course.CourseName)  </dd>
                <dt class="col-sm-2">   @Html.DisplayNameFor(model => model.Course.Credits) </dt>
                <dd class="col-sm-10">  @Html.DisplayFor(model => model.Course.Credits)  </dd>
                    <table class="table">
                        <tr>
                            <th>Enrollment ID</th>
                            <th>Student name</th>
                            <th>Student address</th>
                        </tr>
                        @foreach (var item in Model.Course.Enrollments )
                        {
                            <tr>
                                <td>  @Html.DisplayFor(modelItem => item.EnrollmentId)  </td>

                                <td>  @Html.DisplayFor(modelItem => item.Student.Name)  </td>
                                
                                <td>@Html.DisplayFor(modelItem => item.Student.Address)  </td>
                            </tr>
                        }
                    </table>
                </dd>
            </dl>
        </div>
